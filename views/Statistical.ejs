<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Exercise Statistics</title>
        <script src="https://cdn.tailwindcss.com"></script>
    </head>

    <body>
        <div class="mx-44 my-10 space-y-5">
            <div class=' border-b bg-slate-400 p-10 border-black flex space-x-6'>
                <h1 class="text-3xl font-semibold">
                    Exercise Tracker
                </h1>
                <nav class=" flex mt-1.5">
                    <ul class="flex text-xl space-x-5">
                        <li>
                            <a href="/">
                                Exercise
                            </a>
                        </li>
                        <li>
                            <a href="createExercise.ejs">
                                Create Exercise
                            </a>
                        </li>
                        <li>
                            <a href="Statistical.ejs">
                                Exercise Statistics
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
            <div class="space-y-5">
                <h1 class="text-3xl">
                    Exercise Statistical Data
                </h1>
                <div class="shadow-lg rounded-lg">
                    <div class="py-3 px-5 bg-gray-100 text-center text-lg font-semibold">
                        Data representation on the basis of Duration
                    </div>
                    <div class="flex mx-10 space-x-8">
                        <div class="space-y-5 my-5 font-medium">
                            <% Data.forEach((cell)=>{ %>
                                <div>
                                    <%= cell.name %>
                                </div>
                                <% })%>
                        </div>
                        <div class="w-full">
                            <div class="space-y-5 my-5">
                                <% Data.forEach((cell)=>{ %>
                                    <div>
                                        <div style="width: <%= cell.duration %>%;"
                                            class=" text-center absolute border-black border rounded-full ps-5 bg-green-300">
                                            <%= cell.duration %> Min
                                        </div>
                                        <div class="border-black border rounded-full  bg-white">
                                            Bar
                                        </div>
                                    </div>
                                    <% })%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </body>

</html>